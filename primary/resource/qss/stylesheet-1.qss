QComboBox,QSpinBox,QDoubleSpinBox {
    background: rgba(128, 128, 200, 50);
    border-radius: 2px;
    border: 1px solid rgba(128, 128, 128, 70);
    color: darkblue;
}

QComboBox:hover,QSpinBox:hover,QDoubleSpinBox#MyDoubleSpinBox:hover {
    border-radius: 2px;
    border-width: 1px;
    border-color: rgb(80, 80, 80, 20);
}

QComboBox::down-arrow {
    image:url(:/images/global/controlbar/arrow_down);
}

QComboBox::drop-down,QSpinBox::drop-down,QDoubleSpinBox#MyDoubleSpinBox::drop-down {
    width: 14px;
    border-left: 1px solid rgba(128, 128, 128, 70);
    background:transparent;
}

QComboBox::drop-down:hover,QSpinBox::drop-down:hover,QDoubleSpinBox#MyDoubleSpinBox::drop-down:hover {
    border-left: 1px solid lightgray;
    background:rgb(220, 240, 250);
}

/* ScrollBar */

QScrollBar:vertical {
    background: lightgrey;
    width: 12px;
}

QScrollBar::handle:vertical {
    background: rgba(80,80,80,70);
    min-height: 12px;
    margin: 0px 0px 0px 0px;
}

QScrollBar::add-line:vertical {
    height: 0px;
}

QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
    border: 0px solid grey;
    width: 2px;
    height: 2px;
    background: white;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background: lightgrey;
    height: 12px;
}

QScrollBar::handle:horizontal {
background: rgba(80,80,80,70);
    min-width: 12px;
    margin: 0px 0px 0px 0px;
}

QScrollBar::add-line:horizontal {
    width: 0px;
}

QScrollBar::sub-line:horizontal {
    width: 0px;
}

QScrollBar::up-arrow:horizontal, QScrollBar::down-arrow:horizontal {
    border: 0px solid grey;
    width: 2px;
    height: 2px;
    background: white;
}

QScrollBar::add-page:horzontal, QScrollBar::sub-page:horizontal {
    background: none;
}
