QLineEdit  {
    background: rgba(128, 128, 200, 50);
    border-radius: 2px;
    border: 1px solid rgba(200, 200, 250, 70);
    color: darkblue;
}

QLineEdit:read-only  {
    background: rgba(128, 128, 200, 50);
}

QLineEdit:hover {
    background: rgba(255, 255, 255, 250);
    border: 1px solid rgba(80, 80, 80, 20);
}

QLineEdit:focus {
    background: white;
    border: 1px solid lightgray;
    border-radius: 2px;
}

